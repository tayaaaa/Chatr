<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @profile.user %>
</p>

<p>
  <strong>Uploaded Image:</strong>
  <% if @profile.uploaded_image.attached? %>
    <%= image_tag @profile.uploaded_image %>
  <% else %>
    <p>No image for this user</p>
  <% end %>
</p>

<p>
  <strong>Firstname:</strong>
  <%= @profile.firstname %>
</p>

<p>
  <strong>Lastname:</strong>
  <%= @profile.lastname %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @profile.bio %>
</p>

<p>
  <strong>Skypename:</strong>
  <%= @profile.skypename %>
</p>

<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
