<% if user_signed_in? %>
    <p>
        <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
    </p>
    <p>
        <%= "Welcome #{current_user.profile.firstname}, user_id: #{current_user.id}, role: #{current_user.role.privilege}"%>
    </p>
<% else %>
    <p>
        <%= link_to('Login', new_user_session_path) %>  
     </p>
<% end %>