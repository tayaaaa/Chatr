<% @all_userbooking_cards %>

<div class="rowofcards" >
    <div class="cardslider">
        <% @all_userbooking_cards[locals[:completed]].each do |cardinfo|%>
            <div class="card" id="bookingcard">

                <div class="titlesection">
                    <% if cardinfo[:picture].uploaded_image.attached? %>
                        <%= image_tag cardinfo[:picture].uploaded_image, class: 'profilepic-image' %>
                    <% else %>
                            <p> N/A </p>
                    <% end %>
                    
                    <div class="righthandside">
                        <h2 id = "langwithteach"> <%= "#{cardinfo[:language]} with #{cardinfo[:student]}" %> </h2>
                        <div class = "subtitlesection">
                            <span class="glyphicon glyphicon-hourglass"></span>
                            <%= "#{cardinfo[:duration]} minutes | #{cardinfo[:date].strftime("%e %B, %Y")}"%>
                        </div>
                    </div>

                </div>

                <div class = "cardbody">
                    <p id = "subtitle"> <strong> Lesson description: </strong> <%= "#{cardinfo[:description]}" %> </p> 

                    <p id = "subtitle"> <strong> Your note from  <%= "#{cardinfo[:student]}:" %> </strong> <%= "#{cardinfo[:note]}" %> </p> 
                </div>
                
                <div class = "bottombar">
                    <div class = "button" >
                        <%= link_to "CONTACT #{cardinfo[:student].upcase}",new_conversation_path %>
                    </div>

                    <div class = "complete?">
                        <% if cardinfo[:review] != nil %>
                            <p id = "subtitle"> <strong> Review available: </strong> <%= "#{cardinfo[:review].content}" %> </p> 
                            <% if cardinfo[:userbooking].review.reply == nil %>
                                <%= link_to "REPLY", "/userbookings/replies" %>
                            <% else %>
                                <%= link_to "You have already replied. View your reply here.", "/userbookings/replies" %>
                            <% end %>
                        <% else %>
                            <p id = "subtitle"> <strong> Review not yet available </strong> </p> 
                        <% end %>
                    </div>
                </div>
                
            </div>
        <% end %>
    </div>
</div>