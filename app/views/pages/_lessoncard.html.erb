<div class="cardslider">
    <% @lesson_card_array.each do |lesson| %>
        <a href=<%="/lessons/#{lesson[:id]}"%> >
            <div class="card">            
                <div class = "cardtitle">
                    <h1 id = "language"> <%= lesson[:language].upcase  %> </h1>
                </div>

                <div class = "lessonstats" > <%= lesson[:duration]  %> minutes | $<%= lesson[:price]  %> | <%= lesson[:maxbooking] %> available  </div>

                <div id= "description"> <%= lesson[:description]  %> </div>

                <div id= "teacher"> <%= link_to lesson[:teacher_name], "/profiles/#{lesson[:teacher_id]}" %> </div>

                <div id = "bookbuttondiv">
                    <%= link_to 'BOOK', new_userbooking_path(:lesson_id => lesson[:id] ), class: "bookbutton"%>
                </div>
            </div>
        </a>
    <% end %>
    <div class= "card">
        <div class = "seemorebutton">
            <h1> <%= link_to "See more!" %> </h1>
        </div>
    </div>
</div>