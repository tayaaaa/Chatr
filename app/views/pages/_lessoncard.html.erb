<div class="cardslider">
<% @lesson_card_array.each do |lesson| %>
        <a href=<%="/lessons/#{lesson[:id]}"%> >
            <div class="card">
                <p id = "language"> <%= lesson[:language].upcase  %> </p>
                <p id= "duration" > <%= lesson[:duration]  %> minutes </p>
                <p id= "price"> $<%= lesson[:price]  %> </p>
                <p id= "maxbooking"> <%= lesson[:maxbooking] %> available </p>
                <p id= "description"> <%= lesson[:description]  %> </p>
                <p id= "teacher"> <%= link_to lesson[:teacher_name], "/profiles/#{lesson[:teacher_id]}" %> </p>
                <p id = "bookbutton"> <%= link_to 'BOOK', new_userbooking_path(:lesson_id => lesson[:id] ) %> </p>
            </div>
        </a>
<% end %>
</div>