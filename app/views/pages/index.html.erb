<body>

  <% if current_user %>
    <%= render 'header_nav_authenticated' %>
  <% else %>
    <%= render 'header_nav_public' %>
  <% end %>

  <div id="body" class="browse outer-wrapper">
    <div class="browse inner-wrapper">
      
      <div class ="cardwrapper">

        <div class= "rowofcards">
          <div class="browse-title">
            <h1> Top Rated Teachers ... </h1>
          </div>
          <%= render partial: 'pages/teacher_card', locals: {teachers_card_array: @teachers_card_array}%>  
        </div>
        
        <div class= "rowofcards">
          <div class="browse-title">
            <h1> Browse Available Lessons ... </h1>
          </div>
          <%= render 'lessoncard' %>
        </div>

      </div>
      
    </div>
  </div>

  <%= render 'footer_public' %>
  
</body>
