<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @conversation.user1.email %>
  <%= @conversation.user2.email %>
</p>

<p>
  <strong>Messages:</strong>
  <% @conversation.messages.each do |message| %>
    <div>
      <p><%= message.content %> </p>
      <p> <%= message.author.email %> </p>
      <p> <%= message.date_sent %> </p>
    </div>
  <% end %>
</p>

<%= link_to 'Edit', edit_conversation_path(@conversation) %> |
<%= link_to 'Back', conversations_path %>
<%= link_to 'New Message', new_message_path(:conversation => @conversation) %>
