<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Userbooking</th>
      <th>Stars</th>
      <th>Content</th>
      <th>Date published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td>teacher user_id: <%= review.userbooking.lesson.user.id %>, userbooking_id: <%= review.userbooking.id %>, student user_id: <%= review.userbooking.user_id %> </td>
        <td><%= review.stars %></td>
        <td><%= review.content %></td>
        <td><%= review.created_at%></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
